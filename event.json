{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://future-schema-url",
    "title": "Schema for the object relation payload.",
    "description": "Schema of the payload, describing the relations between objects.",
    "definitions": {
        "identifier": {
            "type": "object",
            "additionalProperties": false,
            "description": "General structure of the persistent identifiers.",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "E.g.: 10.5281/zenodo.123"
                },
                "id_schema": {
                    "type": "string",
                    "description": "E.g.: DOI"
                },
                "id_url": {
                    "type": "string",
                    "description": "E.g.: http://doi.org"
                }
            },
            "required": [
                "id",
                "id_schema"
            ]
        },
        "object_type": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "sub_type": {
                    "type": "string"
                },
                "sub_type_schema": {
                    "type": "string"
                }
            }
        },
        "publisher": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "identifier": {
                    "$ref": "#/definitions/identifier"
                }
            }
        },
        "provider": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "identifier": {
                    "$ref": "#/definitions/identifier"
                }
            }
        },
        "relationship": {
            "properties": {
                "scholix_relationship": {
                    "type": "string",
                    "description": "Currently-supported Scholix relations.",
                    "enum": ["isReferencedBy", "References", "IsSupplementTo", "isSupplementedBy", "IsRelatedTo"]
                },
                "original_relationship_name": {
                    "type": "string",
                    "description": "All other relationship names. TODO: Should we support all DataCite relations?",
                    "enum": ["IsCitedBy", "Cites", "IsIdenticalTo", "IsNextVersionOf", "IsPreviousVersionOf"]
                },
                "original_relationship_schema": {
                    "type": "string",
                    "description": "Example: DataCite."
                }
            }
        },
        "object": {
            "properties": {
                "identifier": {
                    "$ref": "#definitions/identifier"
                },
                "type": {
                    "$ref": "#definitions/object_type"
                },
                "publisher": {
                    "$ref": "#definitions/publisher"
                },
                "publication_date": {
                    "type": "string",
                    "description": "dc:date qualifier 'issued'"
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "link_publication_date": {
            "type": "string"
        },
        "link_provider": {
            "name": {
                "type": "string",
                "description": "Party that is providing the link."
            },
            "identifier": {
                "$ref": "#definitions/identifier"
            }
        },
        "relationship_type": {
            "$ref": "#definitions/relationship"
        },
        "license_url": {
            "type": "string",
            "description": "URL to a license of the link (recommended CC0)"
        },
        "source": {
            "$ref": "#definitions/object"
        },
        "target": {
            "$ref": "#definitions/object"
        }
    }
}
